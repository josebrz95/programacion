<!DOCTYPE html>
<html lang="pt-BR">
<%- include  ('../common-views/head') -%>
<body>
<%- include  ('../common-views/navbar') -%>
<br>
<div class="row container centered" width="100vw">
    <div class="text-center">
        <h2>Tabla de productos</h2>
    </div>
    <br>
    <br>
    <br>
    <table class="table table-hover">
        <thead>
        <th scope="col">Nombre</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Precio</th>
        <th scope="col">Categoria</th>
        <th scope="col">Creacion</th>
        <th scope="col">Actualizacion</th>
        <th scope="col">Acciones</th>
        </thead>
        <tbody>
        <% products.forEach(function(product) { %>
            <tr>
                <td>
                    <%= product.name %>
                </td>
                <td>
                    <%= product.description %>
                </td>
                <td>
                    <%= product.amount %>
                </td>
                <td>
                    <%= product.category ? product.category.name : ''%>
                </td>
                <td>
                    <%= product.created_at.toLocaleDateString() %>
                    <%= product.created_at.toLocaleTimeString() %>
                </td>
                <td>
                    <%= product.updated_at.toLocaleDateString() %>
                    <%= product.updated_at.toLocaleTimeString() %>
                </td>
                <td>
                    <div class="row">
                        <div class="row">
                            <form action="./products/edit" method="GET">
                                <input type="hidden" name="id" value="<%= product.id %>">
                                <button type="submit" class="btn edit-btn"><i class="bi bi-pencil"></i></button>
                            </form>
                        </div>
                        <div class="row"></div>
                        <div class="row">
                            <form action="./products/delete" method="POST">
                                <input type="hidden" name="id" value="<%= product.id %>">
                                <button type="submit" class="btn delete-btn"><i class="bi bi-trash"></i></button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
    <br>
    <br>
    <div class="float-start">
        <a href="./products/add" class="btn primary-btn">Agregar Producto</a>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
<script src="js/script.js"></script>
</body>

</html>
